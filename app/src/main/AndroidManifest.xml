<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mvp.prototype">

    <uses-permission android:name="android.permission.INTERNET" />
    <!-- Permission to Receive SMS  -->
    <uses-permission android:name="android.permission.RECEIVE_SMS"></uses-permission>

    <application
        android:name="com.mvp.prototype.DemoApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:screenOrientation="portrait"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.mvp.prototype.ui.main.splash.view.SplashActivity"
            android:configChanges="locale|layoutDirection"
            android:theme="@style/AppTheme.Base"
            android:windowSoftInputMode="adjustPan|stateHidden">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.mvp.prototype.ui.main.home.view.HomeActivity"
            android:configChanges="locale|layoutDirection"
            android:theme="@style/AppTheme.Base"
            android:windowSoftInputMode="adjustPan|stateHidden">
        </activity>
    </application>

</manifest>
